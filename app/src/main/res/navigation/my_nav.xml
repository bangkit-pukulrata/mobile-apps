<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.pukulenamcapstone.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_newsDetailFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"
            app:destination="@id/newsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/hoaxFragment"
        android:name="com.dicoding.pukulenamcapstone.HoaxFragment"
        android:label="fragment_hoax"
        tools:layout="@layout/fragment_hoax" >
        <action
            android:id="@+id/action_hoaxFragment_to_hoaxResultFragment"
            app:popUpTo="@id/hoaxFragment"
            app:popUpToInclusive="true"
            app:destination="@id/hoaxResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dicoding.pukulenamcapstone.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/hoaxResultFragment"
        android:name="com.dicoding.pukulenamcapstone.HoaxResultFragment"
        android:label="fragment_hoax_result"
        tools:layout="@layout/fragment_hoax_result" />
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.dicoding.pukulenamcapstone.NewsDetailFragment"
        android:label="fragment_news_detail"
        tools:layout="@layout/fragment_news_detail" />
</navigation>